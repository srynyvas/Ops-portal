# Environment Configuration for Mission Control

# API Configuration
REACT_APP_API_URL=http://localhost:3001
REACT_APP_WS_URL=ws://localhost:3001/ws

# Application Configuration
REACT_APP_APP_NAME=Mission Control
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development

# Feature Flags
REACT_APP_ENABLE_WORKFLOWS=true
REACT_APP_ENABLE_RELEASES=true
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_COLLABORATION=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_EXPORT=true
REACT_APP_ENABLE_TEMPLATES=true

# External Service URLs
REACT_APP_DOCS_URL=https://docs.missioncontrol.io
REACT_APP_SUPPORT_URL=https://support.missioncontrol.io
REACT_APP_STATUS_PAGE_URL=https://status.missioncontrol.io

# Analytics & Monitoring
REACT_APP_ANALYTICS_ID=
REACT_APP_SENTRY_DSN=
REACT_APP_ENABLE_DEBUG=false

# Authentication (if using external auth)
REACT_APP_AUTH_PROVIDER=local
REACT_APP_AUTH_DOMAIN=
REACT_APP_AUTH_CLIENT_ID=

# File Upload Configuration
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.gif,.pdf,.doc,.docx,.xls,.xlsx,.csv

# Theme Configuration
REACT_APP_DEFAULT_THEME=light
REACT_APP_PRIMARY_COLOR=blue
REACT_APP_ACCENT_COLOR=purple

# Performance & Caching
REACT_APP_CACHE_DURATION=300000
REACT_APP_ENABLE_SERVICE_WORKER=true
REACT_APP_ENABLE_OFFLINE_MODE=false
