# Environment Configuration for Mission Control

# API Configuration
VITE_API_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:3001/ws

# Application Configuration
VITE_APP_NAME=Mission Control
VITE_VERSION=1.0.0
VITE_ENVIRONMENT=development

# Feature Flags
VITE_ENABLE_WORKFLOWS=true
VITE_ENABLE_RELEASES=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_COLLABORATION=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_EXPORT=true
VITE_ENABLE_TEMPLATES=true

# External Service URLs
VITE_DOCS_URL=https://docs.missioncontrol.io
VITE_SUPPORT_URL=https://support.missioncontrol.io
VITE_STATUS_PAGE_URL=https://status.missioncontrol.io

# Analytics & Monitoring
VITE_ANALYTICS_ID=
VITE_SENTRY_DSN=
VITE_ENABLE_DEBUG=false

# Authentication (if using external auth)
VITE_AUTH_PROVIDER=local
VITE_AUTH_DOMAIN=
VITE_AUTH_CLIENT_ID=

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.gif,.pdf,.doc,.docx,.xls,.xlsx,.csv

# Theme Configuration
VITE_DEFAULT_THEME=light
VITE_PRIMARY_COLOR=blue
VITE_ACCENT_COLOR=purple

# Performance & Caching
VITE_CACHE_DURATION=300000
VITE_ENABLE_SERVICE_WORKER=true
VITE_ENABLE_OFFLINE_MODE=false
